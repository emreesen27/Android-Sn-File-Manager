<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.sn.snfilemanager.feature.media.presentation.MediaViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.search.presentation.SearchFragment">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="@string/search_image_hint" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/av_no_data_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="center"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:visibility="@{vm.searchMediaLiveData.empty ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:lottie_autoPlay="true"
            app:lottie_fileName="no_data_found.json" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:padding="@dimen/_16sdp"
            android:text="@string/type_search_image_info"
            android:textAlignment="center"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/_15ssp"
            android:visibility="@{vm.searchMediaLiveData == null ? View.VISIBLE : View.GONE, default=visible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nothing_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="@string/nothing_found"
            android:textAlignment="center"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/_13sdp"
            android:visibility="@{vm.searchMediaLiveData.empty ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/av_no_data_found" />

        <LinearLayout
            android:id="@+id/bottom_operations_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:elevation="@dimen/_5sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_delete"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/adamina"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/adamina" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_move"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_move"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/adamina"
                android:text="@string/move"
                android:textAlignment="center"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/adamina" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_copy"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/adamina"
                android:text="@string/copy"
                android:textAlignment="center"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/adamina" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_share"
                android:drawablePadding="@dimen/_2sdp"
                android:fontFamily="@font/adamina"
                android:text="@string/share"
                android:textAlignment="center"
                android:textColor="@color/first_text_color"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/adamina" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>